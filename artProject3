      <h3>Matthew's Abstract Painting</h3>
      <!--Canvas 1 - Abstract-->
      <canvas id="myCanvas1" width="400" height="400" style="border:10px solid gray;">
      </canvas>
      
        <script>
          
         
        // Background
          // var c=document.getElementById("myCanvas1");
          // var ctx=c.getContext("2d");
          // ctx.beginPath();
          // ctx.rect(0,0,400,400);
          // ctx.fillStyle = "blue";
          // ctx.fill();
          // ctx.stroke();
          
        var c1 = document.getElementById("myCanvas1");
        var ctx = c1.getContext("2d");
        // Create gradient
        var grd = ctx.createLinearGradient(0,0,200,0);
        grd.addColorStop(0,"red");
        grd.addColorStop(1,"blue");
        // Fill with gradient
        ctx.fillStyle = grd;
        ctx.fillRect(0,0,400,400);
        
         
        // Circle
          ctx.beginPath();
          ctx.arc(0,0,300,0,2*Math.PI);
          ctx.fillStyle = "pink";
          ctx.fill();
          ctx.stroke();
          
          ctx.beginPath();
          ctx.arc(250,250,55,0,2*Math.PI);
          ctx.fillStyle = "pink";
          ctx.fill();
          ctx.stroke();
        
        //Block in corner
        
          ctx.beginPath();
          ctx.rect(300,300,100,100);
          ctx.fillStyle = "orange";
          ctx.fill();
          ctx.stroke();
          
        // Lines (Rectangles)
          ctx.beginPath();
          ctx.rect(300,0,10,400);
          ctx.fillStyle = "black";
          ctx.fill();
          ctx.stroke();
          
          ctx.beginPath();
          ctx.rect(0,300,400,10);
          ctx.fillStyle = "black";
          ctx.fill();
          ctx.stroke();
          
          ctx.beginPath();
          ctx.rect(350,0,10,300);
          ctx.fillStyle = "black";
          ctx.fill();
          ctx.stroke();
          
          ctx.beginPath();
          ctx.rect(0,350,300,10);
          ctx.fillStyle = "black";
          ctx.fill();
          ctx.stroke();
          
        // Diagonal Line(s)
        
          ctx.beginPath();
          ctx.moveTo(120,305);
          ctx.lineTo(305,120);
          ctx.lineWidth=10;
          ctx.stroke();
          
        // Triangle
        
          ctx.beginPath();
          ctx.moveTo(50,100);
          ctx.lineTo(100,50);
          ctx.lineTo(150,100);
          ctx.closePath();
          ctx.fillStyle="green"
          ctx.fill();
          ctx.lineWidth=3;
          ctx.stroke();
        
      </script>
      
      <p></p>
      <h3>A Day at the Beach</h3>
      
      <canvas id="myCanvas2" width="415" height="415" style="border:0px solid black;">
      </canvas>
      
      <script>
      
      //Canvas 2
        var c2=document.getElementById("myCanvas2");
        var ctx=c2.getContext("2d");
        ctx.beginPath();
        ctx.rect(0,0,415,415);
        ctx.fillStyle = "#00bfff";
        ctx.fill();
        ctx.stroke();
        
        
      //Water
        ctx.beginPath();
        ctx.rect(0,200,415,400);
        ctx.fillStyle = "blue";
        ctx.fill();
        ctx.lineWidth=3;
        ctx.stroke();
        
      //Beach/Sand
        ctx.beginPath();
        ctx.moveTo(65,410);
        ctx.lineTo(215,200);
        ctx.lineTo(415,200);
        ctx.lineTo(415,410);
        ctx.closePath();
        ctx.fillStyle=" #c2b280"
        ctx.fill();
        ctx.lineWidth=3;
        ctx.stroke();
        
      //Sun
        ctx.beginPath();
        ctx.arc(60,55,40,0,2*Math.PI);
        ctx.fillStyle = "yellow";
        ctx.fill();
        ctx.stroke();
          
      // Clouds
        ctx.beginPath();
        ctx.rect(125,30,100,40);
        ctx.fillStyle = "white";
        ctx.fill();
        ctx.stroke();
        
        ctx.beginPath();
        ctx.rect(250,18,50,30);
        ctx.fillStyle = "white";
        ctx.fill();
        ctx.stroke();
        
        ctx.beginPath();
        ctx.rect(300,60,90,50);
        ctx.fillStyle = "white";
        ctx.fill();
        ctx.stroke();
        
      //Umbrella
        ctx.beginPath();
        ctx.moveTo(310,305);
        ctx.lineTo(350,190);
        ctx.lineWidth=3;
        ctx.stroke();
        
        ctx.beginPath();
        //ctx.arc(200,200,65,7,1*Math.PI);
        ctx.arc(340,225,65,1.2*Math.PI,2*Math.PI);
        ctx.fillStyle = "#66CD00";
        ctx.fill();
        ctx.stroke();
        
        ctx.beginPath();
        ctx.moveTo(415,230);
        ctx.lineTo(285,188);
        ctx.lineWidth=3;
        ctx.stroke();
      
      // Beach Ball
        ctx.beginPath();
        ctx.arc(280,280,25,0,2*Math.PI);
        ctx.fillStyle = "white";
        ctx.fill();
        ctx.stroke();
        
      //Towel
        ctx.beginPath();
        ctx.moveTo(240,320);
        ctx.lineTo(380,320);
        ctx.lineTo(340,370);
        ctx.lineTo(200,370)
        ctx.closePath();
        ctx.fillStyle="white"
        ctx.fill();
        ctx.lineWidth=3;
        ctx.stroke();
        
          //Stripes
          ctx.beginPath();
          ctx.moveTo(260,320);
          ctx.lineTo(280,320);
          ctx.lineTo(240,370);
          ctx.lineTo(220,370)
          ctx.closePath();
          ctx.fillStyle="red"
          ctx.fill();
          ctx.lineWidth=3;
          ctx.stroke();
          
          ctx.beginPath();
          ctx.moveTo(300,320);
          ctx.lineTo(320,320);
          ctx.lineTo(280,370);
          ctx.lineTo(260,370)
          ctx.closePath();
          ctx.fillStyle="red"
          ctx.fill();
          ctx.lineWidth=3;
          ctx.stroke();
        
          ctx.beginPath();
          ctx.moveTo(340,320);
          ctx.lineTo(360,320);
          ctx.lineTo(320,370);
          ctx.lineTo(300,370)
          ctx.closePath();
          ctx.fillStyle="red"
          ctx.fill();
          ctx.lineWidth=3;
          ctx.stroke();
      
     //Gradient Border
        var gradient = ctx.createLinearGradient(0, 0, 415, 0);
        gradient.addColorStop("0", "red");
        gradient.addColorStop("0.5", "orange");
        gradient.addColorStop("1.0", "red");
        
        // Fill with gradient
        ctx.strokeStyle = gradient;
        ctx.lineWidth = 20;
        ctx.strokeRect(0, 0, 415, 415);
     
      </script>
      
          
      
